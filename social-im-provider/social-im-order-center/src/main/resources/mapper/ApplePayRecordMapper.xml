<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.enuos.live.mapper.ApplePayRecordMapper">
    <resultMap id="BaseResultMap" type="com.enuos.live.pojo.ApplePayRecord">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_id" jdbcType="BIGINT" property="userId"/>
        <result column="order_sn" jdbcType="BIGINT" property="orderSn"/>
        <result column="transaction_id" jdbcType="VARCHAR" property="transactionId"/>
        <result column="payload" jdbcType="VARCHAR" property="payload"/>
        <result column="verification" jdbcType="TINYINT" property="verification"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, user_id,order_sn, transaction_id, payload,verification, create_time
  </sql>
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.enuos.live.pojo.ApplePayRecord"
            useGeneratedKeys="true">
    insert into apple_pay_record (user_id, order_sn, transaction_id,
      payload, verification, create_time)
    values (#{userId,jdbcType=BIGINT},#{orderSn,jdbcType=BIGINT}, #{transactionId,jdbcType=VARCHAR},
      #{payload,jdbcType=VARCHAR}, #{verification,jdbcType=TINYINT}, NOW())
  </insert>

    <!--更新-->
    <update id="update">
        update apple_pay_record
        set
        verification = #{verification}
        where order_sn = #{orderSn}
    </update>

    <select id="isExist" resultType="java.lang.Integer">
      select COUNT(1) from apple_pay_record
      where
      transaction_id = #{transactionId}
      and verification = 1
  </select>

    <select id="getApplePayRecords" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from apple_pay_record
        where
        verification = 0
        limit 10
    </select>
</mapper>