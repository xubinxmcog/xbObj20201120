<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.enuos.live.mapper.CustomerBalanceLogMapper">
    <resultMap id="BaseResultMap" type="com.enuos.live.pojo.CustomerBalanceLog">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="source" property="source"/>
        <result column="source_sn" property="sourceSn"/>
        <result column="create_time" property="createTime"/>
        <result column="amount" property="amount"/>
        <result column="pay_type_id" property="payTypeId"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, user_id, `source`, source_sn, create_time, amount,pay_type_id
  </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from customer_balance_log
        where id = #{id}
    </select>
    <select id="selectByUerId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from customer_balance_log
        where user_id = #{userId}
        order by create_time desc
    </select>
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.enuos.live.pojo.CustomerBalanceLog"
            useGeneratedKeys="true">
    insert into customer_balance_log (user_id, `source`, source_sn, 
      create_time, amount,pay_type_id)
    values (#{userId}, #{source}, #{sourceSn},
      NOW(), #{amount},#{payTypeId})
  </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.enuos.live.pojo.CustomerBalanceLog">
        update customer_balance_log
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="source != null">
                `source` = #{source},
            </if>
            <if test="sourceSn != null">
                source_sn = #{sourceSn},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="amount != null">
                amount = #{amount},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>