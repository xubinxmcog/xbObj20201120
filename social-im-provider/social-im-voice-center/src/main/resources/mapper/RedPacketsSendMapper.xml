<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.enuos.live.mapper.RedPacketsSendMapper">
    <resultMap id="BaseResultMap" type="com.enuos.live.pojo.RedPacketsSend">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="room_id" property="roomId"/>
        <result column="rp_num" property="rpNum"/>
        <result column="total_amount" property="totalAmount"/>
        <result column="rp_surplus" property="rpSurplus"/>
        <result column="surplus_amount" property="surplusAmount"/>
        <result column="is_close" property="isClose"/>
        <result column="send_time" property="sendTime"/>
        <result column="modified_time" property="modifiedTime"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, user_id, room_id, rp_num, total_amount, rp_surplus, surplus_amount, is_close, 
    send_time, modified_time
  </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from red_packets_send
        where id = #{id}
    </select>

    <!-- 正式环境使用(SELECT DATE_SUB(NOW(),interval '24' hour))-->
    <select id="selectOverdueRp" resultMap="BaseResultMap">
        select
        id, user_id, surplus_amount, is_close
        from red_packets_send
        where is_close=0
        and <![CDATA[send_time < (SELECT DATE_SUB(NOW(),interval #{cycle} ${type})) ]]>
        limit 100
    </select>

    <select id="selectEffectiveRp" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from red_packets_send
        where id = #{id}
    </select>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from red_packets_send
    where id = #{id}
  </delete>
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.enuos.live.pojo.RedPacketsSend"
            useGeneratedKeys="true">
    insert into red_packets_send (user_id, room_id, rp_num, 
      total_amount, rp_surplus, surplus_amount, 
      is_close, send_time, modified_time
      )
    values (#{userId}, #{roomId}, #{rpNum},
      #{totalAmount}, #{rpSurplus}, #{surplusAmount},
      0, NOW(), #{modifiedTime}
      )
  </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.enuos.live.pojo.RedPacketsSend">
        update red_packets_send
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="roomId != null">
                room_id = #{roomId},
            </if>
            <if test="rpNum != null">
                rp_num = #{rpNum},
            </if>
            <if test="totalAmount != null">
                total_amount = #{totalAmount},
            </if>
            <if test="rpSurplus != null">
                rp_surplus = #{rpSurplus},
            </if>
            <if test="surplusAmount != null">
                surplus_amount = #{surplusAmount},
            </if>
            <if test="isClose != null">
                is_close = #{isClose},
            </if>
            modified_time = NOW()
        </set>
        where id = #{id}
    </update>

    <update id="updateBatch" parameterType="java.util.List">
        update red_packets_send
        <trim prefix="set" suffixOverrides=",">
            <trim prefix="surplus_amount =case" suffix="end,">
                <foreach collection="list" item="item" index="index">
                    <if test="item.surplusAmount != null">
                        when id = #{item.id} then #{item.surplusAmount}
                    </if>
                </foreach>
            </trim>
            is_close = 1,
            modified_time = NOW()
        </trim>
        where id in
        <foreach collection="list" index="index" item="item" separator="," open="(" close=")">
            #{item.id}
        </foreach>
    </update>

</mapper>